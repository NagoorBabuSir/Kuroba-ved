<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:minHeight="@dimen/cell_post_thumbnail_size"
    tools:layout_height="@dimen/cell_post_thumbnail_size"
    tools:layout_width="@dimen/cell_post_thumbnail_size">

    <com.github.adamantcheese.chan.ui.view.ShapeablePostImageView
        android:id="@+id/thumbnail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        app:shapeAppearanceOverlay="@style/roundedImageViewCorners" />

    <ImageView
        android:id="@+id/checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="2dp"
        android:src="@drawable/ic_fluent_circle_24_filled"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="2dp"
        app:tint="@color/md_blue_500"
        tools:src="@drawable/ic_fluent_checkmark_circle_24_filled" />

</RelativeLayout>
